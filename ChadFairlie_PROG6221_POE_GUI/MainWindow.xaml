<Window x:Class="ChadFairlie_PROG6221_POE_GUI.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:ChadFairlie_PROG6221_POE_GUI"
		xmlns:viewModels="clr-namespace:ChadFairlie_PROG6221_POE_GUI.MVVM.ViewModels"
		xmlns:converters="clr-namespace:ChadFairlie_PROG6221_POE_GUI.Converters"
		mc:Ignorable="d"
		Title="MainWindow"
		Height="600"
		Width="920"
		WindowStyle="None"
		ResizeMode="NoResize"
		Background="Transparent"
		AllowsTransparency="True"
		WindowStartupLocation="CenterScreen">

	<!-- Setting the DataContext for Binding -->
	<Window.DataContext>
		<viewModels:MainViewModel />
	</Window.DataContext>

	<Window.Resources>
		<converters:RecipesViewModelToVisibilityConverter x:Key="RecipesViewModelToVisibilityConverter" />
	</Window.Resources>

	<!-- Main Border -->
	<!-- This border provides a rounded corner look to the entire window and sets the background color. -->
	<Border Background="#272537"
			CornerRadius="20">

		<!-- Grid Definition -->
		<!-- This grid divides the window into a navigation area and a content area. -->
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="200" />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="55" />
				<RowDefinition />
			</Grid.RowDefinitions>

			<!-- Draggable Area -->
			<!-- The top row of the grid is made draggable to allow moving the window around. -->
			<!-- It includes the application title and window control buttons. -->
			<Border Grid.Row="0"
					Grid.ColumnSpan="2"
					Background="Transparent"
					MouseLeftButtonDown="Border_MouseLeftButtonDown">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<!-- Application Title -->
					<TextBlock Text="Recipe Manager"
							   VerticalAlignment="Bottom"
							   HorizontalAlignment="Left"
							   Margin="15,20,0,10"
							   Foreground="White"
							   FontSize="22"
							   FontFamily="/Fonts/#Poppins" />

					<!-- Window Control Buttons -->
					<!-- Custom buttons for minimizing, maximizing, and closing the window. -->
					<StackPanel Grid.Column="1"
								Orientation="Horizontal"
								HorizontalAlignment="Right"
								VerticalAlignment="Top"
								Margin="0,5,10,0">
						<Button x:Name="MinimizeButton"
								Content="—"
								Width="30"
								Height="30"
								Background="Transparent"
								Foreground="White"
								BorderBrush="Transparent"
								Cursor="Hand"
								Click="MinimizeButton_Click" />
						<Button x:Name="MaximizeButton"
								Content="□"
								Width="30"
								Height="30"
								Background="Transparent"
								Foreground="White"
								BorderBrush="Transparent"
								Cursor="Hand"
								Click="MaximizeButton_Click" />
						<Button x:Name="CloseButton"
								Content="X"
								Width="30"
								Height="30"
								Background="Transparent"
								Foreground="White"
								BorderBrush="Transparent"
								Cursor="Hand"
								Click="CloseButton_Click" />
					</StackPanel>
				</Grid>
			</Border>

			<!-- Navigation Area -->
			<!-- Contains navigation buttons to switch between different views in the application. -->
			<StackPanel Grid.Row="1">
				<RadioButton Content="Home"
							 Height="50"
							 Foreground="White"
							 FontSize="14"
							 Style="{StaticResource MenuButtonTheme}"
							 Cursor="Hand"
							 IsChecked="True"
							 Command="{Binding HomeViewCommand}" />

				<RadioButton Content="View Recipes"
							 Height="50"
							 Foreground="White"
							 FontSize="14"
							 Style="{StaticResource MenuButtonTheme}"
							 Cursor="Hand"
							 Command="{Binding RecipesViewCommand}" />

				<RadioButton Content="Settings"
							 Height="50"
							 Foreground="White"
							 FontSize="14"
							 Style="{StaticResource MenuButtonTheme}"
							 Cursor="Hand" />
				<RadioButton Content="Exit"
							 Height="50"
							 Foreground="White"
							 FontSize="14"
							 Style="{StaticResource MenuButtonTheme}"
							 Cursor="Hand"
							 Click="CloseButton_Click" />
			</StackPanel>

			<!-- Search Area -->
			<StackPanel Grid.Column="1"
						Orientation="Horizontal"
						VerticalAlignment="Bottom"
						Margin="20,0,0,0"
						Visibility="{Binding CurrentView, Converter={StaticResource RecipesViewModelToVisibilityConverter}}">
				<TextBox Width="200"
						 Height="40"
						 Margin="0,0,20,0"
						 VerticalContentAlignment="Center"
						 HorizontalAlignment="Left"
						 Grid.Column="1"
						 Style="{StaticResource ModernSearchBox}"
						 Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" />

				<Button Content="Search"
						Width="70"
						Height="40"
						Style="{StaticResource CardButton}"
						Cursor="Hand"
						HorizontalAlignment="Left"
						Margin="0,0,0,0" />
			</StackPanel>

			<!-- Content Area -->
			<!-- This area displays the content of the selected view. -->
			<ContentControl Grid.Row="1"
							Grid.Column="1"
							Margin="10"
							Content="{Binding CurrentView}" />
		</Grid>
	</Border>
</Window>
