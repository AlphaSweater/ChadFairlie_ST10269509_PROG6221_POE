<Window x:Class="ChadFairlie_PROG6221_POE_GUI.MVVM.Views.PopUpView.AddIngredientView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:ChadFairlie_PROG6221_POE_GUI.MVVM.Views.PopUpView"
		mc:Ignorable="d"
		Title="AddIngredientView"
		Height="400"
		Width="350"
		WindowStartupLocation="CenterScreen"
		ResizeMode="NoResize"
		WindowStyle="ToolWindow"
		ShowInTaskbar="False">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<TextBlock Text="Name:"
				   Grid.Row="0"
				   VerticalAlignment="Center"
				   FontSize="14"
				   Margin="10" />
		<TextBox x:Name="NameTextBox"
				 Grid.Row="0"
				 Margin="100,5,10,5" />

		<TextBlock Text="Quantity:"
				   Grid.Row="1"
				   VerticalAlignment="Center"
				   FontSize="14"
				   Margin="10" />
		<TextBox x:Name="QuantityTextBox"
				 Grid.Row="1"
				 Margin="100,5,10,5"
				 InputScope="Number" />

		<TextBlock Text="Unit:"
				   Grid.Row="2"
				   VerticalAlignment="Center"
				   FontSize="14"
				   Margin="10" />
		<ComboBox x:Name="UnitComboBox"
				  Grid.Row="2"
				  Margin="100,5,10,5"
				  IsEditable="True"
				  ItemsSource="{Binding UnitsOfMeasurement}">
		</ComboBox>

		<TextBlock Text="Calories:"
				   Grid.Row="3"
				   VerticalAlignment="Center"
				   FontSize="14"
				   Margin="10" />
		<TextBox x:Name="CaloriesTextBox"
				 Grid.Row="3"
				 Margin="100,5,10,5"
				 InputScope="Number" />

		<TextBlock Text="Food Group:"
				   Grid.Row="4"
				   VerticalAlignment="Center"
				   FontSize="14"
				   Margin="10" />
		<ComboBox x:Name="FoodGroupComboBox"
				  Grid.Row="4"
				  Margin="100,5,10,5"
				  ItemsSource="{Binding FoodGroups}">
		</ComboBox>

		<Button Content="Submit"
				Grid.Row="5"
				Width="100"
				Height="30"
				Margin="0,20,0,0"
				HorizontalAlignment="Center"
				VerticalAlignment="Top"
				Click="SubmitButton_Click" />
	</Grid>
</Window>